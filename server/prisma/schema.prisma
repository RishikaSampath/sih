datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Student {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  rollno    Int?
  updatedAt DateTime @updatedAt
}